  <h2>My TASKS</h2>
<br>
<form ation="/displayTask" method="post">
<ul>
  <% if (tasks) { %>
  <% tasks.forEach(function(task){ %>
    <li class="lineThrough" id="liClick"><%= task.item %>
    <button type="submit" name="deleteTask" value = "<%= task.item %>" style="margin: 0;position: absolute;left: 60%;transform: translate(-10%, 10%);" class="btn btn-primary btn-sm">Delete</button>
  </li>
  <% }) %>
    <% } %>
</ul>
</form>
<% if (message) { %>
  <script>alert('task deleted succesfully!');</script>
    <% } %>
</body>
</html>
